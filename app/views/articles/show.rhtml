<h2><%= @article.title %></h2>

<% if @article.category %>
  <p class="category">
    Category: '<%= link_to @article.category.name, 
                     category_articles_path(@article.category) %>'
  </p>
<% end %>

<p>
  <%= @article.created_at.to_s(:short) %><br />
  <%= textilize(@article.body) %><br />
</p>
<p><%= link_to 'Back to article list', articles_url %></p>
