<h1>Editing entry</h1>

<%= error_messages_for :entry %>

<% form_for(:entry, 
            :url => entry_path(:user_id => logged_in_user.id, :id => @entry), 
            :html => { :method => :put }) do |f| %>
  <p>Title:<br /><%= f.text_field :title, :size => 40 -%></p>
  <p>Blog Entry:<br /><%= f.text_area :body, :rows => 10, :cols => 60 -%></p>
  <p><%= submit_tag "Save" %> or <%= link_to 'cancel', entries_path %></p>
<% end %>
